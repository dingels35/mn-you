@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div style="background-color: #DDB65A">
    <div style="background: url('images/trees.png') no-repeat top center; height: 180px; padding-top: 50px;">
        <div class="container">
            <div class="row">
                <div class="col-xs-10 col-xs-offset-1">
                    @using (@Html.BeginForm("Search", "Vendors", FormMethod.Get)) {
                        <div class="input-group">
                            <input type="text" name="q" class="form-control" placeholder="search for vendors, foods, or events" />
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default btn-orange">Search</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-7" style="padding-top: 60px;">
                <h1>MNyou</h1>
                <p>Conceived in the heart of West Central, Minnesota, MNyou (pronounced menu) is a one stop shop for locally produced goods.</p>
                <p><a asp-controller="Home" asp-action="About">Learn more</a></p>
            </div>
            <div class="col-xm-5">
                <img src="images/minnesota-icon.png" style='width: 260px; margin-bottom: -20px;' />
            </div>
        </div>
    </div>
</div>
<div class="container">
    <h2 style="margin-top: 40px; margin-bottom: 40px; ">What are you looking for?</h2>
    <div class="row text-center">
        <div class="col-sm-3" style="padding-top: 25px;">
            <img src="images/cown-icon.png" class="img-responsive center-block" />
        </div>
        <div class="col-sm-3">
            <img src="images/corn-icon.png" class="img-responsive center-block" />
        </div>
        <div class="col-sm-3">
            <img src="images/jar-icon.png" class="img-responsive center-block" />
        </div>
        <div class="col-sm-3">
            <img src="images/dude-icon.png" class="img-responsive center-block" />
        </div>
    </div>
    <div class="row text-center" style="margin-top: 15px;">
        <div class="col-sm-3">animals</div>
        <div class="col-sm-3">produce</div>
        <div class="col-sm-3">condiments</div>
        <div class="col-sm-3">all vendors</div>
    </div>

</div>
