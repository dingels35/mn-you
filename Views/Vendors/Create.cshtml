@model mn_you.Models.SQLite.Vendor
@{
    ViewData["Title"] = "Register";
}

<h1>Vendor Registration</h1>
<p>Please enter your vendor name, email, and create a password before submiting to register your vendor.</p>

@using (@Html.BeginForm()) {
  if (ViewBag.method == "POST") {
    @Html.ValidationSummary()
  }

  <div class="row">
    <div class="form-group col-xs-12">
      <label>Name</label>
      @Html.EditorFor(v => v.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
  </div>

  <div class="row">
    <div class="form-group col-xs-12">
      <label>Email</label>
      @Html.EditorFor(v => v.Email, new { htmlAttributes = new { @class = "form-control" } })
    </div>
  </div>
  <div class="row">
    <div class="form-group col-xs-12">
      <label>Password</label>
      @Html.EditorFor(v => v.Password, new { htmlAttributes = new { @class = "form-control" } })
    </div>
  </div>
  <button type='submit' class="btn btn-default">Submit</button>

}
