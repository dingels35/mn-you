@model mn_you.Models.SQLite.Vendor
@{
    ViewData["Title"] = Model.Name;
}

<h1>@Model.Name</h1>


<div class="row">
  <div class="col-sm-6">
    <p>@Model.Bio</p>
    <p>
      @Model.Address<br />
      @Model.City, @Model.State @Model.Zip
    </p>
    <p class="social-media-icons">
      @if (!string.IsNullOrEmpty(Model.FacebookUrl)) {
        <a href="@Model.FacebookUrl"><i class='fa fa-facebook-square'></i></a>
      }
      @if (!string.IsNullOrEmpty(Model.TwitterUrl)) {
        <a href="@Model.TwitterUrl"><i class='fa fa-twitter-square'></i></a>
      }
      @if (!string.IsNullOrEmpty(Model.InstagramUrl)) {
        <a href="@Model.InstagramUrl"><i class='fa fa-instagram'></i></a>
      }
      </p>
  </div>
  <div class="col-sm-6">
    @if (!string.IsNullOrEmpty(Model.Address)) {
      <iframe frameborder="0" style="border:0; width: 100%; min-height: 200px;" src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDrOW9Oxojr0i9c4q9LuJQq7q5Xim5ouoY
    &q=@Model.FullAddress" allowfullscreen></iframe>
    }
  </div>
</div>


<div class="row" style="margin-top: 20px;">

  @if (!string.IsNullOrEmpty(Model.TwitterUrl)) {
    <div class="col-sm-6">
      <a class="twitter-timeline" data-height='400' href="@Model.TwitterUrl">Tweets by @Model.Name</a>
      <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
    </div>
  }


  @if (!string.IsNullOrEmpty(Model.FacebookUrl)) {
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.8&appId=123891331029632";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>

    <div class="col-sm-6">
      <div class="fb-page" data-href="@Model.FacebookUrl" data-tabs="timeline"
        data-small-header="true" data-adapt-container-width="true" data-hide-cover="false"
        data-show-facepile="true" data-height='400'>
        <blockquote cite="https://www.facebook.com/minnesotavikings" class="fb-xfbml-parse-ignore">
          <a href="@Model.FacebookUrl">@Model.Name</a>
        </blockquote>
      </div>
    </div>
  }

</div>