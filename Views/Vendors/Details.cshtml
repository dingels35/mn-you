@model mn_you.Models.SQLite.Vendor
@{
    ViewData["Title"] = Model.Name;
}

<h1>@Model.Name</h1>


<div class="row">
  <div class="col-sm-6">
    <p>@Model.Bio</p>
    <p>
      @Model.Address<br />
      @Model.City, @Model.State @Model.Zip
    </p>
    <p class="social-media-icons">
      @if (!string.IsNullOrEmpty(Model.FacebookUrl)) {
        <a href="@Model.FacebookUrl"><i class='fa fa-facebook-square'></i></a>
      }
      @if (!string.IsNullOrEmpty(Model.TwitterUrl)) {
        <a href="@Model.TwitterUrl"><i class='fa fa-twitter-square'></i></a>
      }
      @if (!string.IsNullOrEmpty(Model.InstagramUrl)) {
        <a href="@Model.InstagramUrl"><i class='fa fa-instagram'></i></a>
      }
      </p>
  </div>
  <div class="col-sm-6">
    @if (!string.IsNullOrEmpty(Model.Address)) {
      <iframe frameborder="0" style="border:0; width: 100%; min-height: 200px;" src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDrOW9Oxojr0i9c4q9LuJQq7q5Xim5ouoY
    &q=@Model.FullAddress" allowfullscreen></iframe>
    }
  </div>
</div>

